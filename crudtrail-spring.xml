<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean id="crudtrailSystemSetup" class="de.hybris.platform.crudtrail.setup.CrudtrailSystemSetup">
    <constructor-arg ref="crudtrailService"/>
  </bean>

  <bean id="crudtrailService" class="de.hybris.platform.crudtrail.service.impl.DefaultCrudtrailService">
    <property name="modelService" ref="modelService"/>
    <property name="mediaService" ref="mediaService"/>
    <property name="flexibleSearchService" ref="flexibleSearchService"/>
  </bean>

  <alias name="defaultDiagramProductDao" alias="diagramProductDao"/>
  <bean id="defaultDiagramProductDao" class="de.hybris.platform.crudtrail.dao.impl.DefaultDiagramProductDao">
  </bean>

  <alias name="defaultDiagramProductService" alias="diagramProductService"/>
  <bean id="defaultDiagramProductService"
        class="de.hybris.platform.crudtrail.service.impl.DefaultDiagramProductService">
    <property name="diagramProductDao" ref="diagramProductDao"/>
  </bean>

  <alias name="defaultDiagramProductFacade" alias="diagramProductFacade"/>
  <bean id="defaultDiagramProductFacade" class="de.hybris.platform.crudtrail.facades.impl.DefaultDiagramProductFacade">
    <property name="diagramProductService" ref="diagramProductService"/>
  </bean>

</beans>
